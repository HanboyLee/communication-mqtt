{
  "manifest_version": 3,
  "name": "WebSocket Side Panel Devtool",
  "version": "0.0.1",
  "description": "WebSocket 调试工具，基于 Side Panel，支持自动断开、日志、历史与暗色模式。",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open WebSocket Panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
